<h1>Products</h1>
<p><%= link_to "Add a product", new_product_path %></p>

<table>
	<th>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price in dollars</th>
		</tr>
	</th>

	<% @products.each do |product| %>
		<tr>
			<td><%= link_to(product.name, product_path(product)) %></td>
			<td><%= product.description %></td>
			<td><%= product.formatted_price %></td>
		</tr>
	<% end %>
</table>